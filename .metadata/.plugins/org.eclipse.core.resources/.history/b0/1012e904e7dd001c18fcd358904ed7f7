package models;

public class Calculadora {

	public Calculadora() {}
	
	public static int somar(int a, int b) {
		return a + b;
	}
	
	public int subtrair(int a, int b) {
		return a - b;
	}
	
	public int multiplicar(int a, int b) {
		return a * b;
	}
	
	public float dividir(int a, int b) {
		return (float)a / (float)b;
	}
}
